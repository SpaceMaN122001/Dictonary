<Window x:Class="Dictonary.Windows.WindowAddWord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dictonary.Windows"
        mc:Ignorable="d"
        Title="Добавление слова" Height="209" Width="379">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical" Margin="5, 0, 10, 0">
                <Label>Слово</Label>
                <TextBox x:Name="TextBoxEnglishWord"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5, 0, 10, 0">
                <Label>Перевод</Label>
                <TextBox x:Name="TextBoxWordRussianWord"></TextBox>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0, 0, 5, 10">
            <Button x:Name="ButtonAddWord" Margin="0, 0, 5, 0" Click="ButtonAddWordClick" Width="50px">Ок</Button>
            <Button x:Name="ButtonClose" Click="ButtonCloseClick" Width="60px">Закрыть</Button>
        </StackPanel>
    </Grid>
</Window>
